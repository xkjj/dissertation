<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Available Clothing</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/styles.css">
</head>

<body>

<div class="container mt-2 py-4 mb-4 bg-dark rounded-3 text-white">
    <div class="p-4">
        <h2 class="fw-bolder display-5">Available Clothing</h2>
        <p class="lead">Browse donated clothing items</p>
    </div>
</div>

<div class="container">

    <% if (items.length === 0) { %>
        <p>No clothing items are currently available.</p>
    <% } %>

    <div class="row">
        <% items.forEach(item => { %>
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title"><%= item.title %></h5>

                        <p class="card-text">
                            <%= item.description || 'No description provided.' %>
                        </p>

                        <p class="text-muted mb-1">
                            Category: <%= item.category %><br>
                            Size: <%= item.size || 'N/A' %><br>
                            Condition: <%= item.condition_desc %><br>
                            <% if (user && (user.role === 'sys_admin' || user.role === 'charity_admin')) { %>
                                <small class="text-muted">
                                    Charity ID: <%= item.charity_id %>
                                </small>
                            <% } %>
                            Charity: <%= item.charity_name ? item.charity_name : 'Not assigned' %>
                        </p>

                        <% if (user && user.user_id !== item.user_id) { %>

                            <% if (item.status !== 'available') { %>
                                <button class="btn btn-sm btn-secondary mt-2" disabled>
                                    Unavailable
                                </button>

                            <% } else if (item.has_requested > 0) { %>
                                <button class="btn btn-sm btn-outline-success mt-2" disabled>
                                    Requested
                                </button>

                            <% } else { %>
                                <form action="/requests" method="POST" class="mt-2">
                                    <input type="hidden" name="item_id" value="<%= item.item_id %>">
                                    <button class="btn btn-sm btn-dark">
                                        Request Item
                                    </button>
                                </form>
                            <% } %>

                        <% } %>


                        <small class="text-muted">
                            Donated by: <%= item.username %>
                        </small>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>

    <a href="/homepage" class="btn btn-outline-dark mt-3">Back</a>
</div>

</body>
</html>
