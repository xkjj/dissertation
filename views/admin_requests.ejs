<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Pending Item Requests</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/styles.css">
</head>

<body>

<div class="container mt-2 py-4 mb-4 bg-dark rounded-3 text-white">
    <div class="p-4">
        <h2 class="fw-bolder display-5">Pending Item Requests</h2>
        <p class="lead">Review and manage clothing requests</p>
    </div>
</div>

<div class="container">

    <% if (requests.length === 0) { %>
        <p>No pending requests at this time.</p>
        <a href="/admin/dashboard" class="btn btn-outline-dark mt-2">Back to Dashboard</a>
    <% } %>

    <% requests.forEach(r => { %>
        <div class="card mb-3">
            <div class="card-body">

                <h5 class="card-title"><%= r.title %></h5>

                <p class="card-text mb-2">
                    <strong>Requested by:</strong> <%= r.requester %>
                </p>

                <div class="d-flex gap-2">
                    <form action="/admin/requests/<%= r.request_id %>/approve" method="POST">
                        <button class="btn btn-success btn-sm">Approve</button>
                    </form>

                    <form action="/admin/requests/<%= r.request_id %>/reject" method="POST">
                        <button class="btn btn-danger btn-sm">Reject</button>
                    </form>
                </div>

            </div>
        </div>
    <% }) %>

</div>

</body>
</html>
